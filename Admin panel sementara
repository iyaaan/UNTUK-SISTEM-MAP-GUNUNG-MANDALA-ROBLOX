	if not isAllPlayers then
		local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
		local tween = TweenService:Create(searchButton, tweenInfo, {
			BackgroundColor3 = Color3.fromRGB(80, 80, 90)
		})
